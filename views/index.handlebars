<h1>Burgers!</h1>



<main>
  <div class="container">
    <div class="row">
      <div class="col-md-6">
        <h2>Uneaten Burgers</h2>
        <ul>
          {{#each burgers}}
          {{#unless devoured}}
         <p>
          {{name}}<button class="change-devoured" data-id="{{id}}" data-newsleep="{{devoured}}">
		      EAT ME
	      </button>
        </p>  
        {{/unless}}
        {{/each}}
        </ul>
      </div>
      <div class="col-md-6">
        <h2>Eaten Burgers</h2>
        <ul>
          {{#each burgers}}
          {{#if devoured}}
          <p>{{name}}</p>
      {{!-- {{> burgers/burger-block devoured=false}} --}}
          {{/if}}
          {{/each}}
        </ul>
      </div>
    </div>
    <div class="row">
  <div class="col-md-6">
    <h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  {{!-- <div class="form-group">
    <label for="slee">Sleepy?</label><br>
    <input type="radio" name="sleepy" value="1" checked> Sleepy!<br>
    <input type="radio" name="sleepy" value="0"> Awake
  </div> --}}

  <button type="submit">Add Burger</button>
</form>

  </div>
</div>
  </div>
</main>


